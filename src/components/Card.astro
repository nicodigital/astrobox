---
const { post } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---
<a href={`${baseUrl}/posts/${post.id}`} class="card bg-neutral-800 text-white px-2 py-3 flex flex-col gap-2 rounded-xl">
    <img class="rounded-xl opacity-30" src='https://placehold.co/600x400' alt='' loading='lazy' decoding='async' />
    <h2 class="h2 font-bold" >
        {post.title}
    </h2>
    <p>
        {post.desc.slice(0,150)}...
    </p>
</a>