---
const { film } = Astro.props;
import Picture from '../components/Picture.astro'
// console.log(baseUrl)

---
<a href={`/films/${film.acfeFlexibleLayoutTitle}`} class="card bg-neutral-800 text-white px-2 py-3 flex flex-col gap-2 rounded-xl">
    
    <Picture url={film.poster.node.mediaItemUrl} />

    <h2 class="h2 font-bold" >
        {film.acfeFlexibleLayoutTitle}
    </h2>

    <p>
        {film.genero}...
    </p>

</a>