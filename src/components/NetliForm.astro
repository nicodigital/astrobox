---
import "../styles/components/forms.css";
---

<form
  name="form"
  action="/?form=ok"
  netlify
  data-netlify-recaptcha="true"
>
  <div class="field">
    <input
      type="text"
      name="name"
      placeholder="Nombre y Apellido"
      pattern="^[A-Za-z]+ [A-Za-z]+$"
      required
    />
    <span class="valid-msg"> Coloca tu nombre y Apellido</span>
  </div>

  <div class="field">
    <input
      type="email"
      name="email"
      placeholder="ejemplo@email.com"
      title="Debe ser un correo válido"
      required
    />
    <span class="valid-msg"> Coloca un correo válido</span>
  </div>

  <div class="field">
    <input
      type="tel"
      name="phone"
      placeholder="Teléfono"
      required
      minlength="9"
      maxlength="18"
    />
    <span class="valid-msg"> Coloca un número de teléfono válido</span>
  </div>

  <div class="field">
    <textarea
      cols=""
      name="message"
      rows=""
      placeholder="Mensaje..."
      minlength="16"></textarea>
    <div class="valid-msg">Tu mensaje debe ser de mas de 16 caracteres.</div>
  </div>

  <div data-netlify-recaptcha="true"></div>

  <div class="field">
    <button type="submit" class="btn submit btn-solid-black btn-lg btn-circular" disabled >
      <span class="flex align-center">
        <span class="loader mr-1"></span>
        <span class="white">Enviar</span>
      </span>
    </button>
  </div>

</form>

