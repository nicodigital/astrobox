---
import seoGlobal from "../data/seo.global.json";
const { title, description, image, robots } = Astro.props;
const site = import.meta.env.SITE;
const baseUrl = import.meta.env.BASE_URL;

---
<title>{title}</title>
<meta name="description" content={ description } >
<base href={ baseUrl } target="_self" />

<!-- Canonical -->
<link rel="canonical" href={ Astro.url } />

<!-- Open Graph -->
<meta property="og:site_name" content={seoGlobal.title} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={ Astro.url } />
<meta property="og:image" content={image?.src || seoGlobal.image.src} />
<meta property="og:image:url" content={image?.src || seoGlobal.image.src} />
<meta property="og:image:secure_url" content={image?.src || seoGlobal.image.src} />
<meta property="og:image:type" content="image/jpeg" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="600" />
<meta property="og:image:alt" content={image?.alt || seoGlobal.image.alt} />

<!-- Twitter -->
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:image" content={image?.src || seoGlobal.image.src} />
<meta name="twitter:image:alt" content={title} />
<meta name="twitter:domain" content={site} />

<meta name="author" content={`web: [${seoGlobal.author.name}]: ${seoGlobal.author.url}`} />

{ robots && <meta name="robots" content="noindex, nofollow" /> }

