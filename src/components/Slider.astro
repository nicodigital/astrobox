---
import "swiper/css";
const { slides } = Astro.props;
---
<style>
  h3{
    @apply font-bold absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2;
  }
  img{
    @apply h-[75vh] w-full opacity-50 object-cover object-center
  }
</style>

<!-- Slider main container -->
<div class="swiper bg-neutral-600">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    {
      slides.map((slide) => (
        <div class="swiper-slide">
          <h3 class="h1">
            {slide.title}
          </h3>
          <img
            src={slide.img}
            alt=""
            loading="lazy"
            decoding="async"
          />
        </div>
      ))
    }
  </div>
  <!-- If we need pagination -->
  <div class="swiper-pagination"></div>

  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

  <!-- If we need scrollbar -->
  <div class="swiper-scrollbar"></div>
</div>

<script>
  import Swiper from "swiper";

  function swiperSlider() {
    const SwiperSlider = new Swiper(".swiper", {
      slidesPerView: 1,
      spaceBetween: 0,
      loop: true,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    });
  }

  swiperSlider()
  document.addEventListener("astro:after-swap", swiperSlider );

</script>
