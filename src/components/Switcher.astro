---
import Card from "../components/Card.astro";
---
<style>
  .sw-button{
    @apply cursor-pointer ;
  }
</style>

<div class="container row section">
  <div class="col-[1/13] switcher">
    <div class="flex gap-3 py-4">
      <div class="sw-button" data-switch="content-1">Content 1</div>
      <div class="sw-button" data-switch="content-2">Content 2</div>
      <div class="sw-button" data-switch="content-1">Content 3</div>
    </div>

    <div class="grid grid-cols-3 gap-1">
      <Card cat="content-1" />
      <Card cat="content-2" />
      <Card cat="content-3" />
    </div>
  </div>
</div>

<script>
  
  const switchers = document.querySelectorAll('.switcher');

  switchers.forEach( switcher =>{

    const sw_buttons = switcher.querySelectorAll('.sw-button');
    const sw_items = switcher.querySelectorAll('.sw-item');

    sw_buttons.forEach( button =>{
      button.addEventListener('click', item =>{
        alert('click');
      })
    })


  })

</script>
