---
import { getRelativeLocaleUrl } from 'astro:i18n';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

import LangSwitcher from '../components/LangSwitcher.astro';
import Brand from "../components/Brand.astro";
import Burger from "../components/Burger.astro";
import Menu from "../components/Menu.astro";
const homeUrl = import.meta.env.HOME_URL ?? '/';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const aboutURL = getRelativeLocaleUrl("es", "about");

---
<header class="container row py-4 mb-4" >
    <div class="col-span-2 sm:col-span-3 md:col-span-3">
        <Brand width="w-40% md:w-full xg:w-50%" />
    </div>
    <div class="col-span-2 sm:col-span-3 md:col-[7/11]">

        <Menu items={
            [
                [t('nav.home'), homeUrl ],
                [t('nav.about'), aboutURL],
                [t('nav.services'), '#cards'],
                ['Modal','demo','m-link'],
                [t('nav.icons'),'#icons'],
                [t('nav.contact'), '#contacto']
            ]
        } />

        <Burger/>
        
    </div>
    <div class="md:col-[11/13] flex justify-end">
        <LangSwitcher/>   
    </div>
</header>
