---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';

import LangSwitcher from '../components/LangSwitcher.astro';
import "../css/layout/header.css";
import Brand from "../components/Brand.astro";
import Burger from "../components/Burger.astro";
import Menu from "../components/Menu.astro";
import SocialLinks from '../components/SocialLinks.astro'

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

---
<header class="container row py-4 mb-4" >
    <div class="col-span-2 sm:col-span-3 md:col-span-3">
        <Brand width="w-40% md:w-full xg:w-50%" />
    </div>
    <div class="col-span-2 sm:col-span-3 md:col-[7/11]">

        <Menu items={
            [
                [t('nav.home'), translatePath('/') ],
                [t('nav.about'), translatePath('/about/') ],
                [t('nav.services'), translatePath('/#cards') ],
                ['Modal','demo','m-link'],
                [t('nav.icons'),translatePath('/#icons')],
                [t('nav.contact'), translatePath('/#contacto')]
            ]
        } />

        <Burger/>
        
    </div>

    <div class="col-[11/12] hidden xg:flex justify-end">
        <div class="flex gap-1 text-white">
            <SocialLinks />
        </div>
    </div>

    <div class="xg:col-[12/13] flex justify-end">
        <LangSwitcher/>   
    </div>

</header>
